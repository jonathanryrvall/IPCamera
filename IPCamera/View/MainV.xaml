<Window x:Class="IPCamera.View.MainV"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:command="http://www.galasoft.ch/mvvmlight"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:local="clr-namespace:IPCamera.View"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="SimpleRtspPlayer"
        Width="1200"
        Height="675"
        MinWidth="16"
        MinHeight="16"
        DataContext="{Binding MainVM, Source={StaticResource ViewModelLocator}}"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">

    <Grid>

        <Image Width="640"
               Height="360"
               Margin="72,74,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               SnapsToDevicePixels="True"
               Source="{Binding LiveImage}"
               Stretch="Fill"
               UseLayoutRounding="True" />
        <Button Width="146"
                Height="60"
                Margin="821,107,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Command="{Binding StartRecordCommand}"
                Content="Start record"
                FontSize="20" />
        <Button Width="146"
                Height="60"
                Margin="821,172,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Command="{Binding StopRecordCommand}"
                Content="Stop record"
                FontSize="20" />
    </Grid>
</Window>